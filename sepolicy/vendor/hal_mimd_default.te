type hal_mimd_default, domain;
type hal_mimd_hwservice, hwservice_manager_type;
type hal_mimd_default_exec, exec_type, vendor_file_type, file_type;

init_daemon_domain(hal_mimd_default)

# Add hwservice related rules
add_hwservice(hal_mimd_default, hal_mimd_hwservice)
allow hal_mimd_default hal_mimd_hwservice:hwservice_manager find;
allow hal_mimd_default hwservicemanager:binder { call transfer };
get_prop(hal_mimd_default, hwservicemanager_prop)

allow hal_mimd_default proc_meminfo:file r_file_perms;
allow hal_mimd_default proc_pressure_mem:file rw_file_perms;

allow hal_mimd_default proc_perfmgr:dir search;
allow hal_mimd_default proc_perfmgr:file rw_file_perms;

allow hal_mimd_default sysfs_wake_lock:file { read write open };

allow hal_mimd_default self:capability2 block_suspend;